# Veri-API Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (required for LLM calls)
OPENAI_API_KEY=your-openai-api-key-here

# PostgreSQL Database
# Option 1: Full DSN
POSTGRES_DSN=postgresql://veri:veri@localhost:5433/veri_db

# Option 2: Individual variables (alternative to POSTGRES_DSN)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=veri_db
POSTGRES_USER=veri
POSTGRES_PASSWORD=veri

# Neo4j Graph Database (optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# API Configuration
VERI_API_BASE_URL=http://localhost:8000

# LLM-as-a-Judge (optional, default: false)
ENABLE_LLM_JUDGE=false
JUDGE_MODE=secondary
JUDGE_N=3
JUDGE_TEMPERATURE=0
JUDGE_PROMPT_VERSION=v1

# Test Mode (for pytest, disables .env loading)
TEST_MODE=false

# Neo4j enabled (for tests)
NEO4J_ENABLED=true
